<h1>Carrito</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        <strong>{{this.product.title}}</strong> - ${{this.product.price}}  
        (x{{this.quantity}})
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>Este carrito está vacío.</p>
{{/if}}

<hr>
<a href="/products">Volver a productos</a>
